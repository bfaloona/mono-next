%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:monologues, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:monologues, :new)

.tabs-content
  = form_for :monologue, url(:monologues, :create), :class => 'form-horizontal' do |f|
    =partial 'monologues/form', :locals => { :f => f }
