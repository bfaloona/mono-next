%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:genders, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:genders, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:genders, :edit, :id => @gender.id)

.tabs-content
  = form_for :gender, url(:genders, :update, :id => @gender.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'genders/form', :locals => { :f => f }
