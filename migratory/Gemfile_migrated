
# This file was originally written for Padrino 0.13 by
# Brandon Faloona, then migrated to Sinatra 3.0.5 by
# GPT-3's text-davinci-003 engine, with prompts from Steven Shults. 
# December 2022.

source 'https://rubygems.org'
ruby '3.1.3'
gem 'rake'

# Sinatra Stable Gem
gem 'sinatra', '~> 3.0.5'

# Memcached support
gem 'dalli'

# Security
gem 'rack-protection'

# Component requirements
gem 'activerecord', '~> 4.2', require: 'active_record'
gem 'haml'
gem 'pg'
gem 'rack-rewrite'
gem 'bcrypt'

# pry for debugging. Useful inproduction via:
#   $ heroku run bundle exec padrino console
gem 'pry', require: false
gem 'pry-sinatra', require: false

# gem 'rack-ssl-enforcer'

# Test requirements
group :test do
  gem 'minitest', require: 'minitest/autorun'
  gem 'minitest-reporters', require: false
  gem 'minitest-capybara'
  gem 'mocha', require: false
  gem 'rack-test', require: 'rack/test'
  gem 'capybara'
  gem 'selenium-webdriver'

  # rest-client for making http calls
  gem 'rest-client', require: false
end

# Local development requirements
group :development do
  # guard runs tests automatically
  gem 'guard'
  gem 'guard-minitest', require: false
  gem 'terminal-notifier-guard', require: false
  gem 'rb-fsevent', require: false
end

#Linting requirements for migration project
gem 'rubocop'
gem 'haml-lint'

# Make it stop
Sinatra::Deprecation.skip = true if defined?(Sinatra::Deprecation.skip)
Gem::Deprecate.skip = true if defined?(Gem::Deprecate.skip)