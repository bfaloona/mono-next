.center-column-header
	%p= @title

.center-column-list
	%table#list.table.table-condensed
		%thead
			%tr
				%th.header= 'ID'
				%th.header= 'Author'
				%th.header= 'Title'
				%th.header= 'Classification'

		%tbody
			-@plays.each do |play|
				%tr.list-row
					%td.list-column=play.id
					%td.list-column=play.author_id
					%td.list-column=play.title
					%td.list-column=play.classification
