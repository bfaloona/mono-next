!!! 5
%html{lang: 'en', itemscope: '', itemtype: 'http://schema.org/CollectionPage', class: 'gr__shakespeare-monologues_org'}
	%head
		%title= @title.present? ? "#{@title} | Shakespeare's Monologues" : 'Shakespeare\'s Monologues'

		= javascript_include_tag 'jquery.min', 'bootstrap.min'
		= stylesheet_link_tag 'normalize', 'bootstrap.min', 'mobile'
		= yield_content :include
	.body
		.container
			.center-column-header
				-# %h3= @title
				%form#search-form.navbar-form{role: ""}
					.input-group
						%input#search-box.form-control{placeholder: "Search Shakespeare's Monologues", type: "text", autocomplete: "off", action: "#"}

			.center-column-list

				=partial('monologues/list', locals: {show_play_title: true})


				%script{type: 'text/javascript'}
					:plain
						$( "#search-box" ).focus();
						$( "#search-box" ).click(function( event ) {
							event.preventDefault();
							return false;
						});
						$('#search-box').keyup(function(){
							var query = $('#search-box').val();
							$.ajax({
								url: "/search/" + query,
								cache: false
							})
							.done(function( html ) {
								$( ".jquery-search-replace" ).replaceWith( html );
							});
						});
