.search-wrapper
	%form#search-form.navbar-form{role: ""}
		%input#search-box.form-control.input-lg{placeholder: "Search Shakespeare's Monologues", type: "text", autocomplete: "off", action: "#"}


.center-column-list

	=partial('mobile/list', layout: false, locals: {show_play_title: true})

	%script{type: 'text/javascript'}
		:plain
			$( "#search-box" ).focus();
			$( "#search-box" ).click(function( event ) {
				event.preventDefault();
				return false;
			});
			$('#search-box').keyup(function(){
				var query = $('#search-box').val();
				$.ajax({
					url: "/search/" + query + "/" + window.globalViewGender,
					cache: false
				})
				.done(function( html ) {
					$( ".jquery-search-replace" ).replaceWith( html );
				});
			});
